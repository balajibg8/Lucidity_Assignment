{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "organizations:ListAccountsForParent",
                "ec2:DescribeInstances"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "sts:AssumeRole"
            ],
            "Resource": [
                "arn:aws:s3:::disk-utilization-reports/*",
                "arn:aws:iam::*:role/ansible_central_controller"
            ]
        }
    ]
}